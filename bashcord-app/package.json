{
    "name": "bashcord",
    "version": "1.1.0",
    "description": "The other cutest Discord client mod but made by Ba$h",
    "main": "main.js",
    "private": true,
    "homepage": "https://github.com/roothheo/bashcord",
    "bugs": {
        "url": "https://github.com/roothheo/bashcord/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/roothheo/bashcord.git"
    },
    "license": "GPL-3.0-or-later",
    "author": "Bash",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build-mac": "electron-builder --mac",
        "build-win": "electron-builder --win",
        "build-linux": "electron-builder --linux",
        "dist": "npm run build",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "electron-updater": "^6.1.4"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.6.4"
    },
    "build": {
        "appId": "com.bash.bashcord",
        "productName": "Bashcord",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer.js",
            "assets/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.social-networking",
            "target": [
                {
                    "target": "dmg",
                    "arch": ["x64", "arm64"]
                },
                {
                    "target": "zip",
                    "arch": ["x64", "arm64"]
                }
            ],
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64", "ia32"]
                },
                {
                    "target": "portable",
                    "arch": ["x64", "ia32"]
                }
            ],
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": ["x64"]
                },
                {
                    "target": "deb",
                    "arch": ["x64"]
                },
                {
                    "target": "rpm",
                    "arch": ["x64"]
                }
            ],
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
} 