{
    "name": "bashcord-installer",
    "version": "1.1.0",
    "description": "Installer graphique pour Bashcord - Le client Discord le plus mignon mais fait par Ba$h",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build-all": "electron-builder -mwl",
        "dist": "npm run build"
    },
    "keywords": ["bashcord", "discord", "client", "installer"],
    "author": "Ba$h",
    "license": "GPL-3.0",
    "type": "commonjs",
    "build": {
        "appId": "com.bashcord.installer",
        "productName": "Bashcord Installer",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!node_modules",
            "!dist",
            "!.git"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "assets/icon.icns"
        },
        "win": {
            "icon": "assets/icon.ico"
        },
        "linux": {
            "icon": "assets/icon.png",
            "category": "Utility"
        }
    }
}
